generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  nombre      String
  correo      String    @unique
  clave       String
  descripcion String?
  bloqueado   Boolean   @default(false)
  favorites   Favorite[]
}

model Favorite {
  id        Int    @id @default(autoincrement())
  user      User   @relation(fields: [userCorreo], references: [correo])
  userCorreo String
  correoId  Int
}
